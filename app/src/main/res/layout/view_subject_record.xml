<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/tranparent">

    <TextView
        android:id="@+id/sub_idTV"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="6dp"
        android:padding="3dp"
        android:textColor="@color/White"
        android:visibility="visible" />

    <TextView
        android:id="@+id/sub_nameTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/sub_idTV"
        android:maxLines="1"
        android:padding="3dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/White"/>

    <TextView
        android:id="@+id/sub_TidTV"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@id/sub_nameTV"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/sub_idTV"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="invisible"
        android:textColor="@color/White"/>
    <TextView
        android:id="@+id/sub_codeTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_TidTV"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/sub_idTV"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="visible"
        android:textColor="@color/White"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/sub_codeTV"
        android:layout_marginStart="32dp">

    <TextView
        android:id="@+id/sub_courceTV"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:padding="3dp"
        android:visibility="visible"
        android:textColor="@color/White"/>

    <TextView
        android:id="@+id/sub_semTV"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="visible"
        android:textColor="@color/White"/>

    </LinearLayout>
</RelativeLayout>