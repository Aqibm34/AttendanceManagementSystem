<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.aquib.myattendencemanagementsystem.ViewAttendenceByClassList">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/class_students_attenence_details_listview"
        android:listSelector="@drawable/gradient"
        android:dividerHeight="1.5dp"
        android:padding="2dp">
    </ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/class_empty_attendence_details"
        android:text="@string/empty_list_text"
        android:layout_centerInParent="true"/>

</RelativeLayout>
