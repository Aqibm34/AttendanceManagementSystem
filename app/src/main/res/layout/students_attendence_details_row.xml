<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/gradient"
android:orientation="vertical"
android:id="@+id/relative_layout">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Student_attendence_details_name"
    android:textSize="30sp"
    android:textColor="@color/White"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/Student_attendence_details_name">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Student_attendence_details_regno"
        android:textSize="20sp"
        android:textColor="@color/White"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Student_attendence_details_cource"
        android:textSize="20sp"
        android:textColor="@color/White"
        android:layout_marginStart="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Student_attendence_details_sem"
        android:textSize="20sp"
        android:textColor="@color/White"
        android:layout_marginStart="7dp"/>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="110dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Student_attendence_details_subject"
        android:textSize="20sp"
        android:textColor="@color/White"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Student_attendence_details_date"
        android:textSize="20sp"
        android:textColor="@color/White"
        android:layout_marginStart="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Student_attendence_details_status"
        android:textSize="24sp"
        android:textColorHighlight="@color/red"
        android:textColor="@color/White"
        android:layout_marginStart="200dp"/>
</LinearLayout>
</RelativeLayout>