<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context="com.example.aquib.myattendencemanagementsystem.DeleteAttendence">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cource"
            android:id="@+id/cource_textview"
            android:textSize="25sp"
            android:textColor="@color/White"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/Delete_Cource_Spinner"
            android:dropDownSelector="@color/yellow"
            android:layout_marginStart="45dp">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Semester"
            android:textSize="25sp"
            android:id="@+id/semester_textview"
            android:textColor="@color/White"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/Delete_semester_spinner"
            android:dropDownSelector="@color/yellow"
            android:layout_marginStart="20dp">
        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject"
            android:textSize="25dp"
            android:textColor="@color/White"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:spinnerMode="dropdown"
            android:id="@+id/Delete_subject_spinner"
            android:dropDownSelector="@color/yellow">

        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="22sp"
            style="?android:textAppearanceMedium"
            android:textColor="@color/White"
            android:layout_marginTop="25dp"
            android:id="@+id/selectDate"
            />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:id="@+id/Delete_datepick"
            android:layout_marginStart="10dp"/>



    </LinearLayout>

    <Button
        style="?android:textAppearanceMedium"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:background="@color/red"
        android:text="@string/delete"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/Delete_AttendenceButton"/>


</LinearLayout>
